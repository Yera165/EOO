class operaciones():
    # declaramos el metodo __init__
    def __init__(self):
        self.num1=int(input("Ingrese un primer numero :"))
        self.num2=int(input("Ingrese un segundo numero :"))
 
    def resultados(self):
        suma = self.num1 + self.num2
        resta = self.num1 - self.num2
        multi = self.num1 * self.num2
        div = self.num1 / self.num2
        print("El resultado de la suma es ", suma )
        print("El resultado de la resta es ", resta )
        print("El resultado de la multiplicacion es ", multi )
        print("El resultado de la division es ", div )

 
# bloque principal
operaciones=operaciones()
operaciones.resultados()
